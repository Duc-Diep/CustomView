<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClockActivity">

    <TimePicker
        android:id="@+id/time_picker"
        android:timePickerMode="spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_set_time"
        android:layout_below="@+id/time_picker"
        android:layout_centerHorizontal="true"
        android:text="Đặt giờ"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.ducdiep.excustomview.customs.CustomeClock
        android:id="@+id/my_clock"
        android:layout_below="@id/btn_set_time"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="300dp"/>
    <RelativeLayout
        android:id="@+id/layout_time"
        android:layout_below="@+id/my_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_hours"
            android:text="00"
            android:inputType="number"
            android:textSize="30dp"
            android:maxLength="2"
            android:layout_toLeftOf="@+id/point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/point1"
            android:text=":"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/tv_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_minutes"
            android:text="00"
            android:textSize="30dp"
            android:inputType="number"
            android:maxLength="2"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/point2"
            android:text=":"
            android:textSize="30dp"
            android:layout_marginHorizontal="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_seconds"
            android:layout_centerInParent="true"
            android:text="00"
            android:maxLength="2"
            android:textSize="30dp"
            android:inputType="number"
            android:layout_toRightOf="@id/point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>